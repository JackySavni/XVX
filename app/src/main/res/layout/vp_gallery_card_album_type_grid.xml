<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="22dp">

        <com.video.player.videoplayer.xvxvideoplayer.gallery.util.VP_GallerySquareImageView
            android:id="@+id/vp_imgAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/vp_galley_ripple_white"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/vp_txtAlbumName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/vp_txtNrPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textAlignment="textStart"
        android:textColor="#6a8391"
        android:textSize="12sp" />

</LinearLayout>