<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/vp_jz_dialog_progress_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vp_tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <com.video.player.videoplayer.xvxvideoplayer.util.VP_VerticalProgressBar
            android:id="@+id/vp_volume_progressbar"
            style="@style/ProgressTheme"
            android:layout_width="3dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progressDrawable="@drawable/vp_jz_dialog_progress" />

        <ImageView
            android:id="@+id/vp_volume_image_tip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</LinearLayout>
