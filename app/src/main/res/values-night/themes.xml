<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent1</item>
        <item name="colorPrimaryVariant">@color/colorAccent1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="homeAsUpIndicator">@android:color/black</item>
        <!--        <item name="android:actionModeBackground">@color/colorAccent1</item>-->
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/black</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/grey1</item>
    </style>

    <style name="FullScreen">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressTheme">
        <item name="colorAccent">#000000</item>
    </style>

    <style name="jz_popup_toast_anim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="jz_style_dialog_progress">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/jz_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="pop_animation">
        <item name="android:windowEnterAnimation">@anim/vp_pop_from_bottom_anim_in</item>
        <item name="android:windowExitAnimation">@anim/vp_pop_from_bottom_anim_out</item>
    </style>

    <style name="ListItemSubTitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0px</item>
    </style>

    <style name="ListItemSubTitleStyle1">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0px</item>
    </style>

    <style name="ListItemTitleStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemTitleStyle1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="WideDialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">#ffcc66</item>
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ad</item>
    </style>


    <!--    Gallery-->

    <style name="Theme.Translucent" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeScreenTheme" parent="AppTheme">
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/nav_bar_color</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/black</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBgFilters</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorAccent1</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
        <item name="android:icon">@android:color/black</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ExoStyledControls.Button.Center.Secondary" parent="ExoStyledControls.Button.Center">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ExoStyledControls.Button.Center.control" parent="ExoStyledControls.Button.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="YTOSecondsTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AdAttribution">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">@color/colorAccent1</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="ExoStyledControls.Button.Bottom">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/exo_small_icon_width</item>
        <item name="android:layout_height">@dimen/exo_small_icon_height</item>
        <item name="android:layout_marginLeft">@dimen/exo_small_icon_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/exo_small_icon_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/exo_small_icon_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/exo_small_icon_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/exo_small_icon_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/exo_small_icon_padding_vertical</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <!--for FullScreen -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorAccent1</item>
    </style></resources>